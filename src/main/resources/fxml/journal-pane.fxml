<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainJournalPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lvg.weldercenter.ui.control.JournalController">
    <bottom>
        <HBox prefHeight="32.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btCloseJournalPane" mnemonicParsing="false" onAction="#closeJournalPane" text="Закрыть" />
                <Button fx:id="btUpdate" mnemonicParsing="false" text="Обновить" />
            </children>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </padding>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </bottom>
    <center>
        <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <TableView fx:id="journalTableView" BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="id" prefWidth="40.0" text="id" />
                                <TableColumn fx:id="number" text="Номер" />
                                <TableColumn fx:id="dateBegin" prefWidth="130.0" text="Дата начала" />
                                <TableColumn fx:id="dateEnd" prefWidth="130.0" text="Дата окончания" />
                                <TableColumn fx:id="weldersCount" minWidth="-Infinity" prefWidth="120.0" text="Кол-во сварщиков" />
                                <TableColumn fx:id="curriculum" minWidth="0.0" prefWidth="110.0" text="Учебная программа" />
                            </columns>
                        </TableView>
                    </center>
                    <bottom>
                        <VBox fx:id="vboxToolBars" BorderPane.alignment="CENTER">
                            <children>
                                <ToolBar prefHeight="30.0" prefWidth="200.0">
                                    <items>
                                        <Button fx:id="btFirst" mnemonicParsing="false" text="|&lt;" />
                                        <Button fx:id="btPrev" mnemonicParsing="false" text="&lt;&lt;" />
                                        <Button fx:id="btNew" mnemonicParsing="false" text="&gt;*" />
                                        <Button fx:id="btNext" mnemonicParsing="false" text="&gt;&gt;" />
                                        <Button fx:id="btLast" mnemonicParsing="false" text="&gt;|" />
                                        <Button mnemonicParsing="false" text="копия" />
                                        <ToggleButton fx:id="btShowSearchToolBar" mnemonicParsing="false" text="Поиск" />
                                    </items>
                                </ToolBar>
                                <ToolBar fx:id="toolBarSearch" prefHeight="40.0" prefWidth="200.0">
                                    <items>
                                        <TextField fx:id="txfSearch" prefHeight="25.0" prefWidth="230.0" />
                                    </items>
                                    <VBox.margin>
                                        <Insets bottom="-40.0" />
                                    </VBox.margin>
                                </ToolBar>
                            </children>
                        </VBox>
                    </bottom>
                </BorderPane>
                <BorderPane prefHeight="324.0" prefWidth="161.0" style="-fx-background-color: #bbffaa;">
                    <top>
                        <Label text="Подробные сведения" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </BorderPane.margin>
                        </Label>
                    </top>
                    <center>
                        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-border-color: white;" BorderPane.alignment="CENTER">
                            <content>
                                <GridPane fx:id="welderDetailsPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="475.0" prefWidth="290.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="185.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="38.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="-Infinity" prefHeight="38.0" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="-Infinity" prefHeight="38.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Номер журнала:">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <Label text="Дата начала:" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <TextField fx:id="tfxJournalNumber" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="45.0" prefWidth="60.0" GridPane.columnIndex="1">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </TextField>
                                        <DatePicker fx:id="dpDateBegin" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </DatePicker>
                                        <Label text="Дата начала работ:" GridPane.rowIndex="2">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <DatePicker fx:id="dpDateEnd" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </DatePicker>
                                        <Label text="Программа подготовки:" GridPane.rowIndex="3">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <Label text="Расписание:" GridPane.rowIndex="4">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <ComboBox fx:id="cbCurriculum" prefWidth="165.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                            <GridPane.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                            </GridPane.margin>
                                        </ComboBox>
                              <ListView prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="5">
                                 <GridPane.margin>
                                    <Insets bottom="8.0" left="8.0" right="8.0" />
                                 </GridPane.margin>
                              </ListView>
                              <Label text="Список сварщиков:" GridPane.rowIndex="6">
                                 <GridPane.margin>
                                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                 </GridPane.margin>
                              </Label>
                              <ListView prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
                                 <GridPane.margin>
                                    <Insets bottom="8.0" left="8.0" right="8.0" />
                                 </GridPane.margin>
                              </ListView>
                                    </children>
                                </GridPane>
                            </content>
                        </ScrollPane>
                    </center>
                </BorderPane>
            </items>
            <BorderPane.margin>
                <Insets left="12.0" top="12.0" />
            </BorderPane.margin>
        </SplitPane>
    </center>
    <right>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btAdd" mnemonicParsing="false" text="Добавить" />
                <Button fx:id="btEdit" mnemonicParsing="false" text="Изменить" />
                <Button fx:id="btDelete" mnemonicParsing="false" text="Удалить" />
                <Separator>
                    <VBox.margin>
                        <Insets top="12.0" />
                    </VBox.margin>
                </Separator>
                <Button fx:id="btSave" contentDisplay="CENTER" mnemonicParsing="false" text="Сохранить">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </padding>
            <BorderPane.margin>
                <Insets top="12.0" />
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>
